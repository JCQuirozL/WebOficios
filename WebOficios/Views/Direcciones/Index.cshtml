@model IEnumerable<WebOficios.Models.Direccion>


@{
    ViewData["Title"] = "Lista de Direcciones";
    Pager pager = new Pager();
    int pageNo = 0;

    if(ViewBag.Pager != null)
    {
        pager = ViewBag.Pager;
        pageNo = pager.CurrentPage;
    }
}

<h1>@ViewData["Title"]</h1>



<partial name="_pager" model="@pager" />

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th></th>
            
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>

             
            <td>
                <div class="btn-group gap-2">
                    <a class="btn btn-sm btn-info" asp-action="Edit" asp-route-id="@item.IdDireccion">Modificar</a>
                    <a class="btn btn-sm btn-primary ml-1" asp-action="Details" asp-route-id="@item.IdDireccion">Detalle</a> 
                    <a class="btn btn-sm btn-danger ml-1" asp-action="Delete" asp-route-id="@item.IdDireccion">Borrar</a>
                </div>
             </td>
             
        </tr>

        
}
    </tbody>
</table>
        <div class="text-black">
            <p>Total de registros: @ViewBag.TotalRegistros</p>
        </div>
