@model WebOficios.Models.Direccion

@{
    ViewData["Title"] = "Lista de Direcciones";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<div class="row" style="width:100%;">
    <div class="col-6">
        <h1>@ViewData["Title"]</h1>
    </div>
   <div class="col-4 ">
        <button type="button" onclick="limpiar()" class="btn btn-info form-control" data-bs-toggle="modal" 
        data-bs-target="#myModal">Agregar nueva Dirección</button>
    </div>
 </div>

 <div class="p-4 border rounded bg-light">
     <table id="tblData"  class="table table-responsive-xl" style="width:95%;">
         <thead class="thead-dark">
             <tr class="table-info">
                 <th>Id</th>
                 <th>Nombre</th>
                 <th></th>
             </tr>
         </thead>

     </table>

 </div>


<div class="modal fade" id="myModal" role="dialog">
    <div class="modal-dialog modal-xl modal-dialog-centered">
        <div class="modal-content">
            <form method="post" enctype="multipart/form-data">
                <div class="modal-header">
                    <h2 class="modal-title text-primary text-center">Ingresar Dirección</h2>
                    <button type="button" class="btn-close" data-bs-dismiss="modal">&times;</button>
                </div>

                <div class="modal-body">
                    <div style="padding-left:15%; padding-right:15%; padding-bottom:30px;">
                        <div class="row p-3 border-0">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        </div>
                        <input type="hidden" id="idDireccion" asp-for="IdDireccion" />
                        <div class="form-row" style="padding-top:14px;">
                            <div class="form-group col-md-6">
                                <label>Nombre</label>
                                <input asp-for="Nombre" id="idNombre" class="form-control" placeholder="Nombre de la Dirección" />
                                <span asp-validation-for="Nombre" class="text-danger"></span>
                            </div>

                        </div>

                    </div>
                </div>

                <div class="modal-footer">
                    <button type="button" class="btn btn-danger" data-bs-dismiss="modal" >Cancelar</button>
                    <button type="submit" class="btn btn-success">Guardar</button>
                </div>

            </form>

        </div>

    </div>

</div>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
    <script src="~/js/direcciones.js"></script>
}

